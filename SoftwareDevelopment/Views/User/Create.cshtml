@model Capstone.Models.RegisterModel
@{
    ViewBag.Title = "Add a user";
}

<hgroup class="title">
    <h2>Add A User</h2>
</hgroup>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>User</legend>
        <div class="editor-label">@Html.LabelFor(m => m.UserName)</div>
        <div class="editor-field">@Html.TextBoxFor(m => m.UserName)</div>

        <div class="editor-label">@Html.LabelFor(m => m.Password)</div>
        <div class="editor-field">@Html.PasswordFor(m => m.Password)</div>

        <div class="editor-label">@Html.LabelFor(m => m.ConfirmPassword)</div>
        <div class="editor-field">@Html.PasswordFor(m => m.ConfirmPassword)</div>

        <input type="submit" value="Create" />
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
