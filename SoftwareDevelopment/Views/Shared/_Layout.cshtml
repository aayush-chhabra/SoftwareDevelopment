<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Voucher System</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
        <!-- Latest compiled and minified JavaScript -->
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
        <!--Load the AJAX API-->
        <script type="text/javascript" src="https://www.google.com/jsapi"></script>
        <script src="@Url.Content("~/Scripts/master.js")" type="text/javascript"></script>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title"><a href="@Url.Action("Index", "Home")" class="site-logo"><img alt="Logo" src="@Url.Content("~/Images/Mount_Sinai.gif")" style="max-width: 150px"/>  <img alt="Logo" src="@Url.Content("~/Images/Conduits.png")" /></a></p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                </div>
                @if (HttpContext.Current.User.IsInRole("Administrator"))
                {
                    <nav id="access">
                        <ul id="menu" style="padding-left: 0px;">
                            <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
                            <li>@Html.ActionLink("Users", "Index", "User")</li>
                            <li>@Html.ActionLink("Vouchers", "Index", "Voucher")</li>
                            <li>@Html.ActionLink("Services", "Index", "Service")</li>
                            <li>@Html.ActionLink("Reporting", "Index", "Reporting")</li>
                        </ul>
                    </nav>
                }
                else if (HttpContext.Current.User.IsInRole("Service Provider"))
                {
                    <nav id="access">
                        <ul id="menu" style="padding-left: 0px;">
                            <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
@*                            <li>@Html.ActionLink("Projects", "Index", "Project")</li>*@
                            <li>@Html.ActionLink("Vouchers", "Index", "Voucher")</li>
                            <li>@Html.ActionLink("Use A Service", "Index", "VoucherEvent")</li>
                            <li>@Html.ActionLink("Services", "Index", "Service")</li>
                            <li>@Html.ActionLink("Reporting", "Index", "Reporting")</li>
                        </ul>
                    </nav>
                }
                else if (HttpContext.Current.User.IsInRole("Conduits Administrator"))
                {
                     <nav id="access">
                        <ul id="menu" style="padding-left: 0px;">
                            <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
                            <li>@Html.ActionLink("Vouchers", "Index", "Voucher")</li>
@*                            <li>@Html.ActionLink("Services", "Index", "Service")</li>*@
                            <li>@Html.ActionLink("Reporting", "Index", "Reporting")</li>
                        </ul>
                    </nav>
                }
                else if (HttpContext.Current.User.IsInRole("Investigator"))
                {
                     <nav id="access">
                        <ul id="menu" style="padding-left: 0px;">
                            <li>@Html.ActionLink("Dashboard", "Index", "Home")</li>
                            <li>@Html.ActionLink("Projects", "Index", "Project")</li>
@*                            <li>@Html.ActionLink("Vouchers", "Index", "Voucher")</li>
                            <li>@Html.ActionLink("Reporting", "Index", "Reporting")</li>*@
                        </ul>
                    </nav>
                }
            </div>
        </header>
        <div id="body" class="content-wrapper">
            @RenderSection("featured", required: false)
            <section class="">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Voucher System</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
